    .box-contact
      .container
        .contact-title
          .lb-name Contact
        .row
          .col-sm-9
            .form
              .row.sm-reset-10
                .col-sm-6.padding-all-10
                  .form-group
                    %input.form-control.text-icon-user{:name => "", :placeholder => "Full name", :type => "text"}/
                / col
                .col-sm-6.padding-all-10
                  .form-group
                    %input.form-control.text-icon-email{:name => "", :placeholder => "Email address", :type => "text"}/
