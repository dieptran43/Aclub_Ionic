  %body
    .navigator
      .container
        .logo
          = render "shared/main_logo", url: "img/logo.png"
        .expand-menu
          %i.fa.fa-bars
        = render "shared/static_page_top_banner"
        / menu
      / container
    / navigator
    .main-slider
      .container
        .ms-content
          .ms-caption
            %h1 Ứng dụng đặt bàn và khuyến mãi địa điểm ăn uống.
            .ms-button
              %a{:href => "#"}
                = image_tag("img/btn-ios.png")
              %a{:href => "#"}
                = image_tag("img/btn-android.png")
          .handphone
            = image_tag("img/handphone.png")
        / ms-content
      / container
    / main-slider
    .container
      .intro-app
        .ia-item
          .ia-content
            .ia-title
              200 Khuyến mãi của các nhà hàng chỉ có trên
              %span.text-success AClub
            .ia-desc Setup a professional storefront within minutes.
            .ia-button
              %a.btn.btn-success.btn-2row{:href => "#"}
                Tham khảo
                = succeed "khuy\u{1ebf}n" do
                  %br/
                mãi (KM)
          .ia-img
            = image_tag("data/app1.png")
          .clearfix
        / ia-item
        .ia-item
          .ia-content
            .ia-title
              1,000 Nhà hàng liên kết tính năng đặt bàn trên
              %span.text-success AClub
            .ia-desc Setup a professional storefront within minutes.
          .ia-img
            = image_tag("data/app2.png")
          .clearfix
        / ia-item
        .ia-item
          .ia-content
            .ia-title
              200,000 dữ liệu địa điểm nhà hàng cập nhật trên
              %span.text-success AClub
            .ia-desc Setup a professional storefront within minutes.
          .ia-img
            = image_tag("data/app3.png")
          .clearfix
        / ia-item
        .ia-item
          .ia-content
            .ia-title
              1,000 Nhà hàng phát hành membership cho khách hàng chỉ có trên
              %span.text-success AClub
            .ia-desc Setup a professional storefront within minutes.
          .ia-img
            = image_tag("data/app4.png")
          .clearfix
        / ia-item
      / intro-app
